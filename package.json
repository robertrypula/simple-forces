{
  "name": "simple-forces",
  "version": "0.1.0",
  "description": "",
  "keywords": [],
  "author": "Robert Rypu≈Ça",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && npm run test && npm run lint && npm run lint:tsfmt:verify && webpack --env.PRODUCTION && rimraf dist/dev-node.d.ts",
    "dev-node": "npm run clean && webpack --env.DEVELOPMENT && rimraf dist/dev-node.d.ts && node dist/dev-node.js",
    "dev-browser": "npm run clean && webpack-dev-server --env.DEVELOPMENT --open",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:tsfmt:verify": "tsfmt --verify --no-tsfmt --no-tslint --no-tsconfig --no-vscode",
    "lint:tsfmt:replace": "tsfmt --replace --no-tsfmt --no-tslint --no-tsconfig --no-vscode",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "clean": "rimraf dist && rimraf coverage",
    "npm-check:u": "npm-check --skip-unused -u"
  },
  "main": "dist/simple-forces-v0.1.0.js",
  "types": "dist/lib/index.d.ts",
  "files": [
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robertrypula/simple-forces.git"
  },
  "bugs": {
    "url": "https://github.com/robertrypula/simple-forces/issues"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "drawille": "^1.1.0",
    "terminal-game-io": "3.1.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.13",
    "copy-webpack-plugin": "4.6.0",
    "coveralls": "3.0.2",
    "html-webpack-exclude-assets-plugin": "0.0.7",
    "html-webpack-plugin": "3.2.0",
    "jest": "23.6.0",
    "npm-check": "5.9.0",
    "rimraf": "2.6.2",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.1",
    "tslint": "5.11.0",
    "typescript": "^3.2.2",
    "typescript-formatter": "7.2.2",
    "uglifyjs-webpack-plugin": "2.0.1",
    "webpack": "^4.26.0",
    "webpack-cli": "3.1.2",
    "webpack-dev-server": "3.1.10"
  }
}
