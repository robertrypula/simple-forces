{
  "compilerOptions": {
    "baseUrl": "src/lib",
    "declaration": true,
    "declarationDir": "./dist",
    "jsx": "react",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist",
    "paths": {
      "@": [""],
      "@core/*": ["core/*"],
      "@examples/*": ["examples/*"],
      "@objects/*": ["objects/*"],
      "@shared/*": ["shared/*"]
    },
    "sourceMap": true,
    "target": "es5"
  }
}
